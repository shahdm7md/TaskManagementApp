@model TaskManagementApp.Models.UserTask

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card" style="background-color: rgba(255, 255, 255, 0.5); padding: 30px; border-radius: 15px;">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <!-- زيادة المسافة السفلية إلى mb-5 -->
                    <label asp-for="TaskId" class="control-label" style="color: #232946; font-weight: bold;"></label> <!-- لون وخط بولد -->
                    <input asp-for="TaskId" class="form-control" readonly style="border-radius: 15px;" />
                    <span asp-validation-for="TaskId" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Title" class="control-label" style="color: #232946; font-weight: bold;"></label>
                    <input asp-for="Title" class="form-control" style="border-radius: 15px;" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="control-label" style="color: #232946; font-weight: bold;"></label>
                    <input asp-for="Description" class="form-control" style="border-radius: 15px;" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="DueDate" class="control-label" style="color: #232946; font-weight: bold;"></label>
                    <input asp-for="DueDate" class="form-control" type="date" min="@DateTime.Now.ToString("yyyy-MM-dd")" style="border-radius: 15px;" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Priority" class="control-label" style="color: #232946; font-weight: bold;"></label>
                    <input asp-for="Priority" class="form-control" style="border-radius: 15px;" />
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn" style="background-color: #eebbc3; color: #fff; border-radius: 15px;  font-weight: bold;" />
                </div>
            </form>
        </div>

        <div class="mt-4">
            @* <a asp-action="Index" style="color: #232946; font-weight: bold;">Back to List</a> *@
            <a asp-action="Index" style="color: rgba(35, 41, 70, 0.7); font-weight: bold;">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
